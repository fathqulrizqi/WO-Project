@using NGKBusi.Models;
@{
    DefaultConnection db = new DefaultConnection();
    Int32 i = 1;
    string CurrentURL = Request.Url.AbsoluteUri;
}

<div id="KaizenRewardModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        @Html.AntiForgeryToken()
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Reward</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Reward","SC",new { area="Kaizen" })" class="form-horizontal" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="hfDataID" name="iDataID" value="0" />
                    <div class="form-group row">
                        <label class="control-label col-3 text-right font-weight-bold" for="#txtReward">Reward</label>
                        <div class="col-7">
                            <input id="txtReward" type="text" name="iReward" class="form-control" placeholder="Nilai Reward" required/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnDataSubmit" type="submit" class="btn btn-default">Submit</button>
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
