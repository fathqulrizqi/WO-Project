
@{
    ViewBag.Title = "Forecast Integrated Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forecast Integrated Database</h2>
<hr />
<button type="button" class="btn btn-primary">Download Template</button>
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#uploadFIDModal">Upload Data</button>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Business Type</th>
            <th>Start_Year</th>
            <th>Start_Month</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.FIDHeader)
        {
            <tr>
                <td>@(item.Business_Type_Name)</td>
                <td>@(item.Start_Year)</td>
                <td>@(item.Start_Month)</td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="uploadFIDModal" tabindex="-1" role="dialog" aria-labelledby="uploadFIDModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadFIDModalLabel">Upload Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("UploadData","FID",new { area = "SCM" })" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        <input type="file" name="iFIDUpload" id="inputGroupFile01" required multiple />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

