<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .card .card-header {
            text-align: center;
            color: white;
            font-weight: bold;
            font-size: larger;
        }
    </style>
</head>
<body @(ViewBag.Logo == "no" ? "style=padding-top:140px" : "")>
    @{ if (ViewBag.Logo == "yes")
        {
            <img src="~/Images/niterra-mobility-logo.png" class="img-fluid d-inline-block pull-right" style="height:100px;" />
        }
    }

    <table class="mt-4 mb-4" width="100%" >
        <tr>
            <td><span>No : @(ViewBag.DlvHeader.NoTrans)</span></td>
            <td><span class="float-right">tanggal : @(DateTime.Now.ToString("dd MMMM yyyy"))</span></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td colspan="2">Kepada</td>
        </tr>
        <tr>
            <td colspan="2"><strong>Security PT. Niterra Mobility Indonesia</strong></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td colspan="2">Dengan ini diijinkan kepada : <strong>@(ViewBag.DlvHeader.SupplierName)</strong></td>
        </tr>
        <tr>
            <td colspan="2">Plat Nomor Kendaraan : <strong>@(ViewBag.DlvHeader.VehicleNumberPlate)</strong></td>
        </tr>
        <tr>
            <td colspan="2">Membawa barang keluar tersebut dibawah ini :</td>
        </tr>
    </table>
    <table class="table table-bordered mt-4 mb-4">
        <thead class="table-secondary table-sm">
        <th>No</th>
        <th>Item Name</th>
        <th>Type</th>
        <th>Quantity</th>
        <th>Description</th>
        </thead>
        <tbody>
            @{ int no = 0;}
            @foreach (var item in ViewBag.DlvDetail)
            {
                no++;

                <tr>
                    <td width="5%" style="text-align:center">@no</td>
                    <td width="45%">@item.ItemName</td>
                    <td width="20%">@item.Type</td>
                    <td width="10%" style="text-align:center">@(item.Qty.ToString("N0"))</td>
                    <td width="20%">@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
    <table width="100%" class="mt-4">
        <tr>
            <td><center>Yang membawa barang / menerima</center></td>
            <td width="20%"></td>
            <td><center>Yang menyerahkan barang</center></td>
        </tr>
        <tr>
            <td><center>(Tanda tangan)</center></td>
            <td></td>
            <td><center>(Tanda tangan)</center></td>
        </tr>
        <tr style="height:250px">
            <td><span><center>(    @ViewBag.DlvHeader.RecipientName   )</center></span></td>
            <td></td>
            <td><span><center>(    @ViewBag.CreateByName.Name    )</center></span></td>
        </tr>
    </table>

</body>
</html>