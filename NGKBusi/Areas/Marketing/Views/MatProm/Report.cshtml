<div class="row">

    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info">Generate Report</div>
            <div class="card-body">
                <div class="row p-2">
                    <div class="col-lg-12">
                        <form action="" method="post" id="formReport">
                            <div class="form-group row">
                                <label for="dateRange" class="col-md-2 col-form-label">Select Periode</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control dateFrom" id="dateRange" name="dateFrom" placeholder="Start Date" required autocomplete="off">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" class="form-control dateTo" id="dateRange" name="dateTo" placeholder="End Date" required autocomplete="off">
                                </div>
                                <label for="inputPassword" class="col-md-2 col-form-label" sty>Status</label>
                                <div class="col-md-4">
    
                                   <select class="form-control" name="status">
                                       <option value="all">All</option>
                                       <option value="Signed">Signed</option>
                                       <option value="Acknowledgment">Acknowledgment</option>
                                       <option value="approved">Approved</option>
                                       <option value="verified">Verified</option>
                                   </select>
                                </div>
                            </div>
                            
                            <div class="form-group row">

                                <div class="col-md-6" style="text-align:left">
                                    <input type="button" class="btn btn-info col-5" id="findData" value="Get Data" />
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <hr />
                <div id="toolbar">

                </div>
                <table id="fresh-table"
                       data-show-export="true"
                       data-id-table="advancedTable"
                       data-pagination="true"
                       data-ajax="ajaxRequest"
                       data-show-columns="true"
                       data-show-toggle="true"
                       data-toolbar="#toolbar"
                       data-show-columns-toggle-all="true"
                       data-page-size="100"
                       data-page-list="[10, 25, 50, 100, all]"
                       class="table table-sm table-hover table-striped">
                    <thead>
                        <tr>
                            <th data-field="RequestNo" data-sortable="true">Request No</th>
                            <th data-field="Date" data-sortable="true">Request Date</th>
                            <th data-field="VerifiedTime" data-sortable="true">Verified Date</th>
                            <th data-field="Month" data-sortable="true" style="width: 21%">Month</th>
                            <th data-field="Year" data-sortable="true" data-filter-control="input">Year</th>
                            <th data-field="Usage" data-sortable="true" data-filter-control="select">Usage</th>
                            <th data-field="Recipient" data-sortable="true" data-filter-control="input">Recipient</th>
                            <th data-field="Description" data-sortable="true" data-filter-control="select">Desc</th>
                            <th data-field="ITEMID" data-sortable="true">ITEMID</th>
                            <th data-field="ProductName" data-sortable="Quantity">Product Name</th>
                            <th data-field="Quantity" data-sortable="MaintenanceType">QTY</th>
                        </tr>
                    </thead>
                    <tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="imagemodal" tabindex="-1" aria-labelledby="my-modalLabel" aria-hidden="true" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <img src="" id="imagepreview" style="width: 750px; height: auto">
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.selectpicker').selectpicker();

        $(document).on('click', '#findData', function (e) {

            $('#fresh-table').bootstrapTable('refresh', function () {
                console.log('tes');
            });
        });
    });

    $(function () {
        var $startDate = $('.dateFrom');
        var $endDate = $('.dateTo');

        $startDate.datepicker({
            autoHide: true,
            format: 'yyyy-mm-dd'
        });

        $endDate.datepicker({
            autoHide: true,
            format: 'yyyy-mm-dd',
            startDate: $startDate.datepicker('getDate'),
        });

        $startDate.on('change', function () {
            $endDate.datepicker('setStartDate', $startDate.datepicker('getDate'));
        });

    })

    $(function () {
        $('#fresh-table').bootstrapTable({
            exportDataType: "all",
            exportTypes: ['excel', 'pdf'],
            buttonsClass: 'primary',
        })
    });

    function queryParams(params) {

        return params;
    }

    function ajaxRequest(params) {

        $.ajax({
            type: "post",
            url: "@Url.Action("GenerateReport", "MatProm", new { area = "Marketing" })",
            dataType: 'json',
            data: $('#formReport').serialize(),
            success: function (items) {
                //console.log(items.notReady);
                params.success({
                    rows: items.rows
                }, null);
                $('#toolbar').html(items.title);
            },
            error: function (er) {
                console.log(params.error(er))
                console.log("error", er);
            }
        })

    }
</script>