@section cssHead{
    <style type="text/css">
        .has-error .select2-selection {
            border-color: #dc3545 !important;
        }

        .card {
            box-shadow: 0 5px 10px rgba(0,0,0,.2);
        }

            .card .card-header {
                text-align: center;
                font-weight: bold;
                font-size: medium;
                box-shadow: inset;
