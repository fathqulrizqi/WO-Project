@section scriptHead {
    <script src="~/Content/bootstrap/js/bootstrap5.3.3/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.bootstrap5.js"></script>

    <script src="~/Content/sweetalert2/sweetalert2@11.js"></script>
    <script type="text/javascript">
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
    <script>
            $(document).on('focus', '.dt-search', function () {
                $(this).addClass('clicked');
            });

            $(document).on('blur', '.dt-search', function () {
                $(this).removeClass('clicked');
            });

        $(document).ready(function () {
            $(".selVendorList").select2({
                dropdownParent: $("#createWOModal"),
                width: "100%",
            });


            const table = $("#myTable").DataTable({
                search: {
                    return: true,
                },
                responsive: true,
                autoWidth: true,
                fixedHeader: true,
                order: [[0, 'desc']],
                ajax: {
                url: '@Url.Action("GetDatas", "WorkingOrder", new { area = "Purchasing" })',
                    type: 'GET',
                    dataSrc: 'datas'
                },
                columns: [
                    {
                        data: 'Date',
                        title: 'Date',
                        width: '120px',
                        render: {
                            display: function (data, type, row) {
                                const parts = data.split('-'); // ['2023', '01', '12']
                                return `${parts[2]}-${parts[1]}-${parts[0]}`;
                            },
                            sort: function (data, type, row) {
                                return data;
                            }
                        }
                    },
                    { title: 'Number', data: 'Number', width: '180px' },
                    { title: 'Vendor', data: 'VendorName' },
                    { title: 'Subject', data: 'Subject'  },
                    { title: 'User', data: 'NIKName' },
                    {
                        data: null,
                        title: 'Action',
                        searchable: false,
                        width: '180px',
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                <button title="Add details" class="btn btn-pen" data-id="${row.ID}"><i class="fa-solid fa-file-circle-exclamation" style="color: #66ACB4;"></i>
                                <button title="Edit" class="btn btn-edit" data-id="${row.ID}"><i class="fa-solid fa-pen" style="color: #F6AA04;"></i></button>
                                <button title="View PDF" class="btn btn-pdf" data-id="${row.ID}"><i class="fa-solid fa-file-pdf" style="color: #2C3E50;"></i></button>
                            `;
                        }
                    }],
                initComplete: function () {
                    this.api().columns().every(function () {
                        var column = this;
                        $('input', this.header()).on('keyup change clear', function () {
                            if (column.search() !== this.value) {
                                column.search(this.value).draw();
                            }
                        });
                    });
                },
                layout: {
                    topStart: "pageLength",
                    bottom: "paging",
                    bottomStart: null,
                    bottomEnd: null,
                },
                language: {
                    searchPlaceholder: "Search all tables...",
                    search: "",
                },
            });

            $('#myTable thead').on('keyup change', 'input', function () {
                const colIdx = $(this).parent().index();
                table.column(colIdx).search(this.value).draw();
            });

            $('#myTable').on('click', '.btn-edit', function () {
                const rowId = $(this).data('id');

                $.ajax({
                url: "@Url.Action("GetDataById", "WorkingOrder", new { area = "Purchasing" })",
                type: "POST",
                data: { id: rowId },
                dataType: "json",
                cache: false,
                    success: function (res) {
                        if (res && res.datas) {

                            if ($("#hfIsLogin").val() == "True") {

                            const data = res.datas;
                            $("#NIK").val(data.NIKName || "");
                            $("#subject").val(data.Subject || "");
                            const vendorName = data.VendorName;
                            $('#selVendorList').val(data.Vendor).trigger('change');
                            $('#selVendorList').valid();
                            $('#select2-selVendorList-container').text(data.Vendor + " | " + data.VendorName);
                            $('#timestamps').val(data.Timestamps);
                            $('#number').val(data.Number);
                            $('#idWO').val(rowId);


                            let rawDate = data.Date;
                            if (rawDate) {
                                const parts = rawDate.split('-');
                                const formatted = `${parts[2]}-${parts[1]}-${parts[0]}`;
                                $("#Date").val(formatted);
                            }
                            $('#btnSave').hide();
                            $('#btnEdit').show();

                            $('#exampleModalLabel').text("Edit Working Order");
                            $("#createWOModal").modal("show");
                            $('#timestampsDiv').show();
                                $('#numberDiv').show();
                            } else {
                                Swal.fire("Failed!", "Please login first!");
                            }

                        } else {
                            Swal.fire('Error!', 'No data found for the selected ID.', 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error!', 'Failed to retrieve schedule data.', 'error');
                    }

            });


            });

            $('#myTable').on('click', '.btn-pdf', function () {
                const rowId = $(this).data('id');
                alert('PDF button clicked for row with ID: ' + rowId);
            });

            $('#myTable').on('click', '.btn-pen', function () {
                const rowId = $(this).data('id');
                const url = '@Url.Action("Detail", "WorkingOrder", new { area = "Purchasing" })' + '?id=' + rowId;
                window.open(url, '_blank');
            });


           $('#createWObutton').off('click').on('click', function () {
               if ($("#hfIsLogin").val() == "True") {
                   $("#createWOModal").modal("show");
                   $('#exampleModalLabel').text("Create Working Order");
                   $('#timestampsDiv').hide();
                   $('#btnEdit').hide();
                   $('#btnSave').show();
                   $('#numberDiv').hide();
               } else {
                   Swal.fire("Failed!", "Please login first!");
               }
           });

            $('#btnSave').off('click').on('click', function(e) {
                e.preventDefault();

                if (!$('#formWO').valid()) {
                    return;
                }

                var formData = {
                    Date: $('#Date').val(),
                    NIK: $('#NIK').attr('name'),
                    selVendorList: $('#selVendorList').val(),
                    Subject: $('#subject').val()
                };


                $.ajax({
                    url: '@Url.Action("CreateData", "WorkingOrder", new { area = "Purchasing" })',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        console.log("Response:", response);
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: response.message
                            }).then((result) => {
                                $('#createWOModal').modal('hide');
                                $('#myTable').DataTable().ajax.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("AJAX Error:", error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while creating the Working Order'
                        });
                    }
                });
            });

            $('#btnEdit').off('click').on('click', function(e) {
                e.preventDefault();

                if (!$('#formWO').valid()) {
                    return;
                }

                var selectedVendor = $('#selVendorList').val();

                var formData = {
                    id: $('#idWO').val(),
                    Date: $('#Date').val(),
                    NIK: $('#NIK').attr('name'),
                    selVendorList: selectedVendor,
                    Subject: $('#subject').val(),
                    Number: $('#number').val(),
                    Timestamps: $('#timestamps').val()
                };


                $.ajax({
                    url: '@Url.Action("UpdateData", "WorkingOrder", new { area = "Purchasing" })',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        console.log("Response:", response);
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: response.message
                            }).then((result) => {
                                $('#createWOModal').modal('hide');
                                $('#myTable').DataTable().ajax.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("AJAX Error:", error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while creating the Working Order'
                        });
                    }
                });
            });

            $('#createWOModal').off('hidden.bs.modal').on('hidden.bs.modal', function () {
                $('#formWO')[0].reset();
                $('#formWO .invalid-feedback').remove();
                $('#formWO .form-control').removeClass('is-invalid');

                // Reset Select2 dengan cara yang benar
                $("#selVendorList").val(null).trigger('change');
                $("#selVendorList").next('.select2-container').find('.select2-selection').removeClass('is-invalid');

                formWOValidate.resetForm(); // Reset validator
            });



        });
        DataTable.type('date', 'className', ' ');

    </script>
}

