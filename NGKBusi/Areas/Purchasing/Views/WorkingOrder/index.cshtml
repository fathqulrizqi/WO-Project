@Html.Partial("Partial/Modal")

<script>

    var formWOValidate = $("#formWO").validate({
        rules: {
            selVendorList: { required: true },
            Subject: { required: true, maxlength: 100 },
        },
        messages: {
            selVendorList: { required: "Please select a vendor." },
            Subject: { required: "Please enter a subject.", maxlength: "Maximum 100 characters allowed." },
        },
        errorElement: 'div',
        errorPlacement: function (error, element) {
            error.addClass('invalid-feedback');
            if (element.hasClass('selVendorList')) {
                error.insertAfter(element.next('.select2-container'));
            } else {
                error.insertAfter(element);
            }
            error.show();
        },
        highlight: function (element, errorClass, validClass) {
            if ($(element).hasClass('selVendorList')) {
                $(element).next('.select2-container').find('.select2-selection').addClass('is-invalid');
            } else {
                $(element).addClass('is-invalid');
            }
        },
        unhighlight: function (element, errorClass, validClass) {
            if ($(element).hasClass('selVendorList')) {
                $(element).next('.select2-container').find('.select2-selection').removeClass('is-invalid');
            } else {
                $(element).removeClass('is-invalid');
            }
        }
    });


</script>