
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div.loading {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(16, 16, 16, 0.5);
        z-index: 1000;
    }
</style>

@section scriptHead{
    <script type="text/javascript">
        $(document).ready(function () {

            var _currData;
            var _len;
            var _start;

            $('#fUploadData').on('change', function () {
                files = $(this)[0].files;

                if (files.length == 0) {
                    return false;
                }
                name = '';
                cntFile = 0;
                for (var i = 0; i < files.length; i++) {
                    name += '\"' + files[i].name + '\"' + (i != files.length - 1 ? ", " : "");
                    cntFile++;
                }

                if (cntFile > 1) {
                    name = cntFile + " Files";
                }
                $(this).siblings(".custom-file-label").html(name);
            });

            $("#formUploadData").submit(function () {
                var currCTR = $("#btnBudgetUpload");
                var file_data = $("#fUploadData").prop('files')[0];
                var form_data = new FormData();
                form_data.append('file', file_data);
                form_data.append('iThirdParty', "Data");
                form_data.append('iFormType', $("#rbFormTypeFG:checked").val()); 
                //currCTR.LoadingOverlay("hide");
                $.ajax({
                    url: "/NGKBusi/IC/GIMS/_GetDataKniguris",
                    method: "POST",
                    tryCount: 0,
                    tryLimit: 3,
                    contentType: false,
                    processData: false,
                    cache: false,
                    data: form_data, success: function (data) {
                        console.log(data);
                        _currData = data;
                        _len = data.length;
                        _start = 0;
                        uploadData(data[_start]);
                        $(".upload-wrap").fadeIn();
                        $("#fUpload").val("");
                        $(".uploadProgress").attr("aria-valuemax", _len);
                        //currCTR.LoadingOverlay("hide");
                        $(".uploadProgress").removeClass("bg-success");
                    }, error: function (xhr, textStatus, errorThrown) {
                        if (textStatus === "timeout") {
                            this.tryCount++;
                            if (this.tryCount <= this.tryLimit) {
                                $.ajax(this);
                                return;
                            }
                        }
                        $("#fUpload").val("");
                        //currCTR.LoadingOverlay("hide");
                        alert("Error Occurred, Please Try Again.");
                        console.log("Error Occurred, Please Try Again.");
                    }
                });
                return false;
            });

            function uploadData(_data) {
                if (_start < _len) {
                    $.ajax({
                        url: "/NGKBusi/IC/GIMS/UploadDataKniguris",
                        method: "POST",
                        tryCount: 0,
                        tryLimit: 3,
                        data: {
                            uploadData: _data,
                            //uploadData: _data.join("|"),
                        }, success: function (data) {
                            console.log(data);
                            _start++;
                            var completed = ""
                            //-1 because excel setting => HDR=No
                            if ((_start) == (_len)) {
                                completed = " Completed!"
                                $(".uploadProgress").addClass("bg-success");
                            }
                            //-1 because excel setting => HDR=No
                            $(".uploadProgress").text((_start) + " of " + (_len) + completed);
                            $(".uploadProgress").attr("aria-valuenow", (_start));
                            $(".uploadProgress").css("width", Math.round(((_start) / (_len)) * 100) + "%");
                            uploadData(_currData[_start]);
                        }, error: function (xhr, textStatus, errorThrown) {
                            if (textStatus === "timeout") {
                                this.tryCount++;
                                if (this.tryCount <= this.tryLimit) {
                                    $.ajax(this);
                                    return;
                                }
                            }
                            $("#fUpload").val("");
                            alert("Error Occurred, Please Try Again.");
                        }
                    });
                } else {
                   // window.location.replace("/NGKBusi/IC/GIMS");
                }
                $("#fUpload").val("");
            }
        });
    </script>
}

<div class="loading" style="display:none">
    <div class='uil-ring-css' style='transform:scale(0.79);'>
        <div></div>
    </div>
</div>

<h2>Kniguris
    <a href="@Url.Action("Progress", "GIMS", new { area = "IC" })" class="btn btn-primary">Back to Progress</a>
</h2>

<hr />
<form id="formUploadData">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="iFormType" id="rbFormTypeFG" value="FG" checked required>
        <label class="form-check-label" for="rbFormTypeFG">Finished Goods</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="iFormType" id="rbFormTypeKD" value="KD" required>
        <label class="form-check-label" for="rbFormTypeKD">KD Part</label>
    </div>
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="fUploadData" required>
        <label class="custom-file-label" for="fUploadData">Choose file...</label>
    </div>
    <button type="submit" class="btnUpload btn btn-primary mt-3">Submit</button>
</form>

<div class="upload-wrap" style="display:none;">
    <h3 class="uploadingInfo">Uploading...Please Wait..</h3>
    <div class="progress">
        <div class="uploadProgress progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
    </div>
    <hr />
</div>